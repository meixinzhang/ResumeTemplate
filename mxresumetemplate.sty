\ProvidesPackage{mxresumetemplate}
\usepackage{lipsum}

\usepackage{xcolor}

\usepackage{mdframed}
\mdfsetup{skipabove=0pt,skipbelow=-2pt} % removes above and below skips

\newenvironment{resumeheading}[1][]
{
	\begin{mdframed}
	[
		nobreak=true,
		linewidth=0pt,
		frametitle={#1},
		frametitlerule=true,
		backgroundcolor=headingFill,
		fontcolor=headingColour,
		innertopmargin=\topskip,
		innerbottommargin=3mm,
	]
}{
	\end{mdframed}
}

\newenvironment{sidebar}[1][]
{
	\begin{mdframed}
	[
		linewidth=0pt,
		frametitle={#1},
		frametitlerule=true,
		backgroundcolor=sidebarFill,
		fontcolor=sidebarColour,
		% edit for margin
		innertopmargin=3mm,
		innerleftmargin=3mm,
        innerrightmargin=0mm,
	]
}{
	\end{mdframed}
}

\newenvironment{resumebody}[1][]
{
	\begin{mdframed}
	[
		linewidth=0pt,
		frametitle={#1},
		frametitlerule=true,
		backgroundcolor=bodyFill,
		fontcolor=bodyColour,
		% edit for margin
		innertopmargin=2mm,
		innerbottommargin=2.5mm,
		innerleftmargin=2mm,
        innerrightmargin=3mm,
	]
}{
	\end{mdframed}
}
